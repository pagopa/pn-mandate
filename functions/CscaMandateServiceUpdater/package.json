{
  "name": "CscaMandateServiceUpdater",
  "version": "1.0.0",
  "description": "Lambda function to trigger ECS service redeploy when CSCA certificates are updated",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test-build": "npm run-script test && npm run-script coverage && npm run-script sonar && npm run-script build",
    "build": "rm -f ./function.zip && zip -r ./function.zip . -x './src/test/*' -x '*.md' -x '*.env' -x './coverage/*' -x './.nyc_output/*' -x './.scannerwork/*' -x 'node_modules/@aws-sdk/*'",
    "test": "nyc --reporter=html --reporter=text mocha './src/test/**/*.test.js' --recursive --timeout=10000 --exit -r dotenv/config",
    "coverage": "nyc report --reporter=lcov",
    "sonar": "node sonarqube-scanner.js -Dsonar.login=${SONAR_TOKEN}"
  },
  "keywords": [
    "aws",
    "lambda",
    "ecs",
    "csca",
    "mandate",
    "redeploy"
  ],
  "license": "ISC",
  "devDependencies": {
    "@aws-sdk/client-ecs": "^3.665.0",
    "aws-sdk-client-mock": "^4.1.0",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "sonarqube-scanner": "^3.5.0"
  }
}